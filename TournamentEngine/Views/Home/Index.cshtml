@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="Fifa 18 - Torunament" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Fifa 18 - Torunament" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Fifa 18 - Torunament" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner4.svg" alt="Fifa 18 - Torunament" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Wilanowski FIFA 18</h2>
        <ul>
            <li>Blisko świątyni, czyli będzie natchniona gra:)</li>
            <li>Gramy ooooo darmową pizze, czyli lub coś innego:D</li>
            <li>Zapisy do środy wieczora:) każdy może zagrać dla zabawy, treningu itp:)</li>
            <li>Więcej informacji o turnieju : @Html.ActionLink("Regulamin turnieju", "Download", "Rules", new { TurnamentName = "Wilanow" })</li>
        </ul>
    </div>
</div>
